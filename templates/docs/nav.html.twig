<div class="sticky sticky-{{ filename }}">
    <h3>documentation</h3>
    <small><p>{{ siteVersion().version }}</p></small>

    {# docs #}
    {% for file, classname in navigation %}
        <a href="{{ path('docs_file', { filename: file }) }}" class="{{ filename != file ? '' : 'active' }}">{{ file }}</a>

        {% if filename == file and markdown.headings %}
            <div class="sub-menu" id="list-example">
                {% for heading in markdown.headings %}
                    <a href="#section-{{ (loop.index) }}" class="sub">{{ heading }}</a>
                {% endfor %}
            </div>
        {% endif %}
    {% endfor %}

    <hr>

    {# custom #}
    <a href="{{ path('docs_file', { filename: 'Costs' }) }}" class="{{ filename != 'Costs' ? '' : 'active' }}">Server Costs</a>
    <a href="{{ path('docs_file', { filename: 'ChangeLogs' }) }}" class="{{ filename != 'ChangeLogs' ? '' : 'active' }}">Change Logs</a>
    <a href="{{ path('docs_file', { filename: 'Icons' }) }}" class="{{ filename != 'Icons' ? '' : 'active' }}">Icons</a>
</div>
